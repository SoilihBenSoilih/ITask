<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Activities.HomePageActivity">

    <ImageView
        android:id="@+id/logo_imageView"
        android:layout_width="100dp"
        android:layout_height="160dp"
        android:layout_margin="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/add_project_button"
        android:src="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/email_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo_imageView"
        android:layout_margin="5dp"
        android:layout_marginLeft="50dp"
        android:text="yxz@utaks.ca"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/logo_imageView"
        app:layout_constraintLeft_toLeftOf="@+id/logo_imageView"
        app:layout_constraintRight_toRightOf="@id/logo_imageView"/>

    <Button
        android:id="@+id/add_project_button"
        android:layout_width="160dp"
        android:layout_height="140dp"
        android:layout_below="@id/email_textView"
        android:layout_alignParentLeft="true"
        android:src="@drawable/baseline_add_white_24dp"
        app:layout_constraintLeft_toRightOf="@id/logo_imageView"
        app:layout_constraintRight_toLeftOf="@id/project_list_button"
        app:layout_constraintVertical_chainStyle="spread"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:background="@drawable/bggreen"
        android:text="Ajouter un projet"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/statistics_button"/>

    <Button
        android:id="@+id/project_list_button"
        android:layout_width="160dp"
        android:layout_height="140dp"
        android:layout_below="@id/email_textView"
        android:layout_alignParentRight="true"
        android:background="@drawable/bggreen"
        android:text="Liste projets"
        app:layout_constraintRight_toLeftOf="@id/start_pomodoro"
        app:layout_constraintLeft_toRightOf="@id/add_project_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ranking_button"
        />

    <Button
        android:id="@+id/statistics_button"
        android:layout_width="160dp"
        android:layout_height="140dp"
        android:layout_below="@id/add_project_button"
        android:layout_alignParentLeft="true"
        android:background="@drawable/bggreen"
        android:text="Statistiques"
        app:layout_constraintTop_toBottomOf="@id/add_project_button"
        app:layout_constraintLeft_toLeftOf="@id/add_project_button"
        app:layout_constraintRight_toRightOf="@id/add_project_button"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
        android:id="@+id/ranking_button"
        android:layout_width="160dp"
        android:layout_height="140dp"
        android:layout_below="@id/project_list_button"
        android:layout_alignParentRight="true"
        android:background="@drawable/bggreen"
        android:text="Classement"
        app:layout_constraintTop_toBottomOf="@id/add_project_button"
        app:layout_constraintRight_toRightOf="@id/project_list_button"
        app:layout_constraintLeft_toLeftOf="@id/project_list_button"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
       android:id="@+id/start_pomodoro"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:src="@drawable/baseline_add_white_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/project_list_button"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>