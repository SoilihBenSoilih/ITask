<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Activities.RegisterActivity">

    <ImageView
        android:id="@+id/icon_connexion"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:src="@drawable/icon_login"/>

    <EditText
        android:id="@+id/editText_pseudo"
        android:layout_width="250dp"
        android:layout_height="36dp"
        android:ems="10"
        android:background="@drawable/edit_text_grey"
        android:drawableLeft="@drawable/ic_action_person"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/icon_connexion"
        android:hint="Pseudo"
        android:inputType="text" />

    <EditText
        android:id="@+id/editText_email"
        android:layout_width="250dp"
        android:layout_height="36dp"
        android:ems="10"
        android:background="@drawable/edit_text_grey"
        android:drawableLeft="@drawable/ic_action_person"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:hint="Email"
        android:layout_below="@+id/editText_pseudo"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/editText_password"
        android:layout_width="250dp"
        android:layout_height="36dp"
        android:ems="10"
        android:layout_marginTop="40dp"
        android:background="@drawable/edit_text_grey"
        android:hint="Mot de passe"
        android:drawableLeft="@drawable/ic_action_password"
        android:layout_below="@+id/editText_email"
        android:layout_centerHorizontal="true"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/editText_confirm_password"
        android:layout_width="250dp"
        android:layout_height="36dp"
        android:ems="10"
        android:layout_marginTop="40dp"
        android:background="@drawable/edit_text_grey"
        android:hint="Confirmer le mot de passe"
        android:drawableLeft="@drawable/ic_action_password"
        android:layout_below="@+id/editText_password"
        android:layout_centerHorizontal="true"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/button_register"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="S'enregistrer"
        android:background="@drawable/button_rectangle_pink"
        android:layout_below="@+id/editText_confirm_password"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_centerHorizontal="true">
    </Button>

    <TextView
        android:id="@+id/textView_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/button_register"
        android:layout_alignRight="@+id/button_register"
        android:textSize="15sp"
        android:text="Skip"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true">
    </TextView>

</RelativeLayout>